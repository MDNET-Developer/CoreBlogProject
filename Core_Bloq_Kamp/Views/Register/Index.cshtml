@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainView.cshtml";
}

<div class="container">
			<h3 class="tittle">Qeydiyyatdan keç</h3>
				<div class="inner-sec">
			<div class="login p-5 bg-light mx-auto mw-100">
				<form action="#" method="post">
						<div class="form-row">
								<div class="col-md-6 mb-3">
										<label for="validationCustom01">İstifadəçi adı</label> <span asp-validation-for="WriterName" class="text-danger"></span>

									<input type="text" asp-for="WriterName" class="form-control" id="validationDefault01" placeholder="">
								</div>
								<div class="col-md-6 mb-3">
										<label for="validationCustom02">E-poçt ünvanı</label><span asp-validation-for="WriterMail"  class="text-danger"></span>
									<input type="email"  asp-for="WriterMail" class="form-control" id="validationDefault02" placeholder="" >
								</div>
							</div>
							<div class="form-row">
								<div class="form-group col-md-6">
										<label for="exampleInputPassword1 mb-2">Şifrə</label><span asp-validation-for="WriterPassword" class="text-danger"></span>
									<input type="password" asp-for="WriterPassword" class="form-control" id="password1" placeholder="" >
								</div>
								<div class="form-group col-md-6">
										<label for="exampleInputPassword2 mb-2">Foto</label>
										<input type="password" asp-for="WriterImage" class="form-control" id="password2" placeholder="">
									</div>
								
							</div>
							<button type="submit" class="btn btn-primary submit mb-4">Qeydiyyatdan keç</button>
						</form>
		
					</div>
			</div>
		</div>


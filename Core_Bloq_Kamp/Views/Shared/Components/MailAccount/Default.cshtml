@using EntityLayer.Concrete
@model List<Writer>

<div class="account-top">
    @foreach (var x in Model)
    {
        <div class="account-top-left">
            <img src="@x.WriterImage" style="width: 1.5cm; height: 1.5cm; border-radius: 100%" alt="">
        </div>
        <div class="account-top-right">
            <h2>@x.WriterName </h2>
            <p>@x.WriterMail</p>
        </div>
        <div class="clear"> </div>
    }
</div>

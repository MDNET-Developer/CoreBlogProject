@using EntityLayer.Concrete
@model List<Blog>

    						<div class="tech-btm">
							<h4>Son 3 post</h4>

							<div class="blog-grids row mb-3">
								@foreach (var item in Model.TakeLast(5))
							   {
								  	<div class="col-md-5 blog-grid-left">
									<a href="/Default/BlogDetails/@item.BlogID/">
										<img src="@item.BlogImage" class="img-fluid" alt="">
									</a>
								</div>
								<div class="col-md-7 blog-grid-right">

									<h5>
										<a href="/Default/BlogDetails/@item.BlogID/">@item.BlogTitle</a>
									</h5>
									<div class="sub-meta">
										<span>
											<i class="far fa-clock"></i> @(((DateTime)item.BlogCreateDate).ToString("dddd, dd MMMM yyyy"))</span>
									</div>
								</div> 
							   }
							

							</div>
						</div>
@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "BlogEdit";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h2>Blog Yenilə</h2>
<hr />

@using (Html.BeginForm("BlogEdit", "Writer", FormMethod.Post))
{
@Html.HiddenFor(x=>x.BlogID)
<h4>Bloq başlıq</h4>
@Html.TextBoxFor(x=>x.BlogTitle ,new{@class="form-control"})
<p class="text-danger">@Html.ValidationMessageFor(x=>x.BlogTitle)</p>
<br />
<h4>Bloq Foto</h4>
@Html.TextBoxFor(x=>x.BlogImage ,new{@class="form-control"})
<br />
<h4>Bloq kateqoriya</h4>
@Html.DropDownListFor(x=>x.CategoryID,(List<SelectListItem>)ViewBag.categorylist ,new{@class="form-control"})
<br />
<h4>Bloq məzmun</h4>
@Html.TextBoxFor(x=>x.BlogContent ,new{@class="form-control"})
<p class="text-danger">@Html.ValidationMessageFor(x=>x.BlogContent)</p>
<br />
<h4>Bloq tarix</h4>
<input type="date" name="BlogCreateDate" />
<br />
<button href="#" class="hvr-icon-float-away">Təsdiqlə</button>
}
